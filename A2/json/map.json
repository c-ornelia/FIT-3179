{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 680,
  "height": 300,
  "title": {
    "text": "Relative Pokémon GO Interest, Malaysian States (2016 – 2024)",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "offset": 20
  },
  "projection": {
    "type": "mercator",
    "center": [110, 4.5],   
    "scale": 1800
  },  
  "params": [
    {
      "name": "yearSelector",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "csv/geoMap.csv"
      },
      "transform": [
        {"filter": "datum.Year == yearSelector"},
        {
          "lookup": "Region",
          "from": {
            "data": {
              "url": "json/malaysia.json",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name",
            "fields": ["geometry"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#333", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geometry", "type": "geojson"},
        "color": {
          "field": "Interest",
          "type": "quantitative",
          "scale": {"scheme": "tealblues", "domain": [0, 100]},
          "title": ["Relative", "Interest", "Score"]
        },
        "tooltip": [
          {"field": "Region", "title": "State: "},
          {"field": "Interest", "title": "Relative Interest Score: "},
          {"field": "Year", "title": "Year: "}
        ]
      }
    },
    {
      "data": {
        "url": "json/malaysia.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#ededed", "strokeWidth": 0.5}
    }
  ]
}
