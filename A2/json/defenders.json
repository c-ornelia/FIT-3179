{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Pokémon defender lollipop chart by score",
  "width": 760,
  "height": 280,
  "background": "#f4f8ff",
  "title": {
    "text": "Top 10 Defenders by Tier",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "offset": 20
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {
      "gridColor": "#dee2e6",
      "gridWidth": 1,
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": "normal"
    }
  },
  
  "padding": {
    "right": 40,
    "bottom": 15
  },
  "autosize": {"type": "fit-x", "contains": "padding", "resize": true},
  "data": {
    "url": "csv/defenders.csv"
  },
  "params": [
    {
      "name": "tierSelect",
      "value": "S",
      "bind": {
        "input": "select",
        "options": ["S", "A+", "A", "B", "C", "D"],
        "labels": ["S", "A+", "A", "B", "C", "D"],
        "name": "Select Tier: ",
        "element": "#vis .vega-bind"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Tier == tierSelect"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 2,
        "color": "#395e69"
      },
      "encoding": {
        "x": {
          "field": "Score",
          "type": "quantitative",
          "title": "Defender Score",
          "scale": {"domain": [0, 80000]},
          "axis": {
            "titlePadding": 15,
            "domain": false,
            "ticks": false,
            "gridColor": "#ededed",
            "gridWidth": 1,
            "labelExpr": "format(datum.value, ',')",
            "labelAlign": "center",
            "labelPadding": 5,
            "values": [10000, 20000, 30000, 40000, 50000, 60000, 70000, 80000]
          }
        },
        "y": {
          "field": "Name",
          "type": "ordinal",
          "sort": "-x",
          "axis": {
            "title": null
          }
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "opacity": 1,
        "size": 100,
        "color": "#395e69"
      },
      "encoding": {
        "x": {
          "field": "Score",
          "type": "quantitative"
        },
        "y": {
          "field": "Name",
          "type": "ordinal",
          "sort": "-x"
        },
        "tooltip": [
          {
            "field": "Name",
            "title": "Pokémon: "
          },
          {
            "field": "Tier",
            "title": "Tier: "
          },
          {
            "field": "Defense",
            "title": "Defense: "
          },
          {
            "field": "Stamina",
            "title": "Stamina: "
          },
          {
            "field": "Score",
            "title": "Score: ",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "fontSize": 12
      },
      "encoding": {
        "x": {
          "field": "Score",
          "type": "quantitative"
        },
        "y": {
          "field": "Name",
          "type": "ordinal",
          "sort": "-x"
        },
        "text": {
          "field": "Score",
          "format": ","
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "transform": [{
        "filter": "datum.Name === 'Blissey'"
      }],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 12,
        "x": 255,
        "y": 65,
        "text": ["Blissey outshines all others with a much higher defender score."],
        "color": "#333"
      }
    }
  ]
}