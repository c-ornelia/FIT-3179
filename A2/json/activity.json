{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": " Most Preferred Activity in Pokémon GO.",
  "width": 360,
  "height": 240,
  "background": "#f4f8ff",
  "title": {
    "text": "Most Popular Activities",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "offset": 20
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": "normal"
    }
  },
  "padding": {
    "right": 20
  },
  "data": {
    "values": [
      {"activity": "Catching Pokémon", "percentage": 69},
      {"activity": "Hatching Eggs", "percentage": 6},
      {"activity": "Battling Gyms", "percentage": 10},
      {"activity": "Raiding", "percentage": 15}
    ]
  },
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
    },
    {
      "mark": {"type": "text", "radiusOffset": 10, "fontSize": 12, "fill": "#000000"},
      "encoding": {
        "text": {"field": "percentage", "type": "quantitative"}
      }
    },
    {
      "transform": [{
        "filter": "datum.activity === 'Hatching Eggs'"
      }],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 12,
        "x": -10,
        "y": 85,
        "text": ["Low reward and high effort", "make egg hatching unpopular."],
        "fill": "#333"
      }
    }
  ],
  "encoding": {
    "theta": {"field": "percentage", "type": "quantitative", "stack": true},
    "radius": {"field": "percentage", "scale": {"type": "sqrt", "rangeMin": 70, "rangeMax": 140}},
    "color": {
      "field": "activity",
      "type": "nominal",
      "scale": {
        "range": ["#aa83c9", "#4181ab", "#f7dd5e", "#f4acb7"]
      },
      "legend": {"title": "Activity", "offset": -35}
    },
    "order": {"field": "percentage", "type": "quantitative", "sort": "descending"},  
    "tooltip": [
      {"field": "activity", "type": "nominal", "title": "Activity:"},
      {"field": "percentage", "type": "quantitative", "title": "Percentage (%): ", "format": "d"}
    ]
  }
}