{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Annual Revenue Line Chart",
  "width": 480,
  "height": 270,
  "background": "#edf2fb",
  "title": {
    "text": "Annual Revenue of Pokémon GO (Million USD)",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "offset": 20
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {
      "gridColor": "#dee2e6",
      "gridWidth": 1,
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": "normal"
    }
  },
  "data": {
    "values": [
      {"Year": 2016, "Revenue": 550.45},
      {"Year": 2017, "Revenue": 444.73},
      {"Year": 2018, "Revenue": 607.6},
      {"Year": 2019, "Revenue": 653.45},
      {"Year": 2020, "Revenue": 908.93},
      {"Year": 2021, "Revenue": 902.34},
      {"Year": 2022, "Revenue": 648.28},
      {"Year": 2023, "Revenue": 590.91},
      {"Year": 2024, "Revenue": 557.36}
    ]
  },
  "layer": [
    {
      "transform": [
        {
          "filter": "datum.Year == 2020"
        }
      ],
      "mark": {
        "type": "point",
        "filled": true,
        "size": 180,
        "color": "#ff928b"
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Revenue", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "line", 
        "color": "#ff928b",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"labelAngle": 0, "title": null, "labelAlign": "center", "labelPadding": 10}
        },
        "y": {
          "field": "Revenue",
          "type": "quantitative",
          "axis": {"labelPadding": 10, "titlePadding": 10}
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year: "},
          {"field": "Revenue", "type": "quantitative", "title": "Revenue (Million USD): "}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",   
        "fontWeight": 100,
        "fontSize": 10,
        "x": 150,
        "y": 138,
        "text": ["Pokémon GO’s revenue hit its peak in 2020 thanks to new 'play-at-home'" , 
                 "features like Remote Raid Passes and a virtual Pokémon GO Fest,",
                 "which became especially popular during pandemic lockdowns."],
                   
        "color": "#333"
      }
    }
  ]
}